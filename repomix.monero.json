{
  "output": {
    "filePath": "context-monero.xml",
    "style": "xml",
    "showLineNumbers": true
  },
  "ignore": {
    "customPatterns": [
      "target/**",
      "*.lock",
      ".git/**",
      "context*.xml",
      "monero-swap-context-*.txt",
      "node_modules/**",
      "__pycache__/**",
      "*.pyc",
      ".cursor/**",
      "terminals/**",
      "cairo/**",
      "docs/archive/**"
    ]
  },
  "include": [
    "README.md",
    "SECURITY.md",
    "CLAUDE.md",
    ".cursorrules",
    "deny.toml",
    "docs/ARCHITECTURE.md",
    "docs/PROTOCOL.md",
    "docs/decisions/001-key-splitting.md",
    "KEY_SPLITTING_SECURITY_ANALYSIS.md",
    "RACE_CONDITION_MITIGATION.md",
    "rust/Cargo.toml",
    "rust/AUDIT_DEPENDENCIES.md",
    "rust/src/lib.rs",
    "rust/src/main.rs",
    "rust/src/dleq.rs",
    "rust/src/monero/**",
    "rust/src/adaptor/**",
    "rust/src/starknet.rs",
    "rust/src/starknet_full.rs",
    "rust/src/monero_full.rs",
    "rust/src/poseidon.rs",
    "rust/tests/**",
    "rust/test_vectors.json",
    "rust/src/bin/maker.rs",
    "rust/src/bin/taker.rs",
    "rust/src/bin/generate_test_vector.rs",
    "tools/verify_full_compatibility.py",
    "tools/verify_rust_cairo_equivalence.py"
  ]
}

