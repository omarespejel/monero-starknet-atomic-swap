{
  "output": {
    "filePath": "context-full.xml",
    "style": "xml",
    "showLineNumbers": true
  },
  "ignore": {
    "customPatterns": [
      "target/**",
      "*.lock",
      "monero-swap-context-*.txt",
      "context*.xml",
      "cairo/tests/test_debug_*",
      "cairo/tests/test_unit_*",
      "tools/**",
      "rust/src/bin/*",
      "node_modules/**",
      ".git/**",
      "__pycache__/**",
      "*.pyc",
      ".cursor/**",
      "terminals/**",
      "docs/archive/**"
    ]
  },
  "include": [
    "README.md",
    "rust/Cargo.toml",
    "rust/src/lib.rs",
    "rust/src/dleq.rs",
    "rust/src/monero/**",
    "rust/tests/key_splitting_dleq_integration.rs",
    "rust/tests/atomic_swap_e2e.rs",
    "rust/tests/dleq_properties.rs",
    "cairo/Scarb.toml",
    "cairo/src/**",
    "cairo/tests/test_e2e_*",
    "cairo/tests/test_security_*",
    "deny.toml",
    "rust/AUDIT_DEPENDENCIES.md"
  ]
}
